module SimplyTypedLambdaCalculus

imports Common

exports
	
  context-free start-symbols
    Exp
    
  lexical syntax
  	[a-z]+ -> ID
    
  context-free syntax
	ID -> Exp {cons("Var")}
  	"\\" ID ":" Type "." Exp -> Exp {cons("Abs")}
  	Exp Exp -> Exp {cons("App")}
  	"{" (ID "=" Exp)* "}" -> Exp {cons("Record")}
  	Exp "." ID -> Exp {cons("Projection")}
  	
  context-free syntax
  	Type "->" Type -> Type {cons("Arrow")}