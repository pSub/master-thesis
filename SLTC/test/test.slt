module test

language PCF

meta-variables	Var "~" { Var Type Exp }
				Ctx "$" { Context }
				Id  "%" { ID }

contexts Context := Var{I} x Type{O}

judgments Context{I} "|-" Exp{O} ":" Type{O}

rules

~X : ~T in $C
=============== T-var
$C |- ~X : ~T
 
(~X : ~S ; $C) |- ~E : ~T
===================================== T-abs
$C |- (fun %X : ~S (~E)) : ~S -> ~T
 
$C |- ~E : ~S -> ~T
$C |- ~F : ~S
==================== T-app
$C |- ~E ~F : ~T